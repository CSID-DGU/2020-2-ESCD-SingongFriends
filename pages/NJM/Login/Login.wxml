<view class="container">
  <view class="Logo">
    <image src="/resource/Logo.jpg" id="logo_image"></image>
  </view>
  <view class="Input" style="border-width:2px; border-color: gray; border-style:solid">
      <input id="input" type="number" placeholder="학번을 입력하세요." onfocus="this.placeholder=''" onblur="this.placeholder='학번을 입력하세요.'"></input>
