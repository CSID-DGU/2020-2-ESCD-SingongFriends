/* pages/NJM/Scholarship/Scholarship.wxss */

.Scholarship {
  margin: 70px 0 30px 0;
  width: 80%;
  padding: 12px 0 12px 0;
  text-align: center;
  background-color: #F4B183;
  border-radius: 0.1cm;
  color: white;
  border: 1px solid black;
}

#scholarship {
  width: 100%;
  margin: 10px 0 10px 0;
}

.section {
  background-color: white;
  padding: 10px;
  margin: 3px 0;
}

.Semester_btn {
  width: 80%;
}

#semester_btn {
  width: 100%;
  margin: 0 0 10px 0;
}

#instructions {
  margin: 10px 0 20px 0;
  padding: 10px 0 10px 0px;
  border-width: 1px;
  border-color: black;
  border-style: solid;
  border-radius: 0.1cm;
  width: 100%;
  height: auto;
  font-size: small;
}

.select_box {
  background-color: #eee;
  width: 24%;
  position: absolute;
  top: 40px;
  z-index: 1;
  overflow: hidden;
  text-align: center;
  animation: myfirst 0.5s;
  margin-left: 34%;
}

@keyframes myfirst {
  from {
      height: 0px;
  }
  to {
      height: 52px;
  }
}

.select_one {
  height: 25px;
  line-height: 25px;
  border-bottom: 1px solid #ccc;
}

.list-msg2 {
  margin-top: 10px;
  width: 24%;
  text-align: center;
  height: 23px;
  border: 1px solid #ccc;
  margin-left: 34%;
  position: absolute;
  background-color: white;
  padding-top: 5px;
}