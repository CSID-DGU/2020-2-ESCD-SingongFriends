#state{
  right:20px;
  padding-top: 10%;
  text-align: center;
  color: blue;
  font-size: 10px;
}

.ctrtext{
  text-align: center;
  margin-top: 10px;
  color: black;
  border-color: black;
  background-origin: padding-box;
  border-style: double;
  padding-top: 10px;
  padding-bottom: 10px;
  width:85%;
  padding-left: 20px;
}

#ctr{
  margin-top: 70px;
  text-align: center;
  background-color: rgb(197, 253, 253);
}

.goToMenu {
  width: 95%;
}

#gotoMenu {
  margin: 30px 0 10px 0;
  background-color: #BFBFBF;
  width: 100%;
}

.select_box {
  background-color: #eee;
  width: 24%;
  position: absolute;
  top: 40px;
  z-index: 1;
  overflow: hidden;
  text-align: center;
  animation: myfirst 0.5s;
  margin-left: 34%;
}

@keyframes myfirst {
  from {
      height: 0px;
  }
  to {
      height: 52px;
  }
}

.select_one {
  height: 25px;
  line-height: 25px;
  border-bottom: 1px solid #ccc;
}

.list-msg2 {
  margin-top: 10px;
  width: 24%;
  text-align: center;
  height: 23px;
  border: 1px solid #ccc;
  margin-left: 34%;
  position: absolute;
  background-color: white;
  padding-top: 5px;
}