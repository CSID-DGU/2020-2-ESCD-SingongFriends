/* pages/Curriculum/Curriculum.wxss */
@import "../lib/common.wxss";

.recommended{
   font-weight: bold;
   color: red;
}
movable-area {
  width: 150%;
  overflow: hidden;
  font-size: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  position: absolute;
  left:-50%;
}


movable-view {
  white-space: nowrap;
  width: 200rpx; 
  position: relative;
}

.V-scroll-view{
  height: 250px;
  align-items:center;
  white-space: nowrap;
  overflow: hidden;
}

.V-scroll-view-mini{
  height: 150px;
  align-items:center;
  white-space: nowrap;
  overflow: hidden;
}

.V-scroll-item{
  display: inline-block;
  height: 30px;
}

.line{
  width:100%;
  height:1px;
  color:black;
  flex-basis: 100%;
  background-color: black;
}

.btn{
  width:100px;
}

.select_box {
  background-color: #eee;
  width: 24%;
  position: absolute;
  top: 40px;
  z-index: 1;
  overflow: hidden;
  text-align: center;
  animation: myfirst 0.5s;
  margin-left: 34%;
}

@keyframes myfirst {
  from {
      height: 0px;
  }
  to {
      height: 52px;
  }
}

.select_one {
  height: 25px;
  line-height: 25px;
  border-bottom: 1px solid #ccc;
}

.list-msg2 {
  margin-top: 10px;
  width: 24%;
  text-align: center;
  height: 23px;
  border: 1px solid #ccc;
  margin-left: 34%;
  position: absolute;
  background-color: white;
  padding-top: 5px;
}