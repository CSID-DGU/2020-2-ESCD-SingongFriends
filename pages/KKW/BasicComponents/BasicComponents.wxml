  <view class="section">
    <view wx:if="{{imgVisible3=='true'}}">
      <view class="Fees">
        <view class="table_header">
          <view class="th th1">{{message_th1_1}}</view>
          <view class="th th2">{{message_th2_1}}</view>
        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_2}}</view>
          <view class="th th2">{{message_th2_2}}</view>
        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_3}}</view>
          <view class="th th2">{{message_th2_3}}</view>
        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_4}}</view>
          <view class="th th2">{{message_th2_4}}</view>
        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_5}}</view>
