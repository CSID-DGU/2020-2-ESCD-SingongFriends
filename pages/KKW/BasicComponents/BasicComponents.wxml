      <view style="margin-left:5%;">–{{message_inform10}}</view>
      <view style="margin-left:5%;">–{{message_inform11}}</view>
      <view style="font-size:13px; color:gray;"><text style="color:red; margin-left:3%;">▶</text>{{message_inform12}}</view>
      <view style="margin-left:5%;">-{{message_inform13}}</view>
    </view>
  </view>

  <button bindtap='image1_show' style="border: 1px solid black;">{{message_btn3}}</button>
  <view class="section">
    <view wx:if="{{imgVisible=='true'}}" class="flex justify-center">
      <image src="{{imageUrl_w}}"></image>
    </view>
  </view>
</view>