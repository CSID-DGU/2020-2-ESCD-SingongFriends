        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_6}}</view>
          <view class="th th2">{{message_th2_6}}</view>
        </view>
        <view class="table_header">
          <view class="th th1">{{message_th1_7}}</view>
          <view class="th th2">{{message_th2_7}}</view>
